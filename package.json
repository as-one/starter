{
  "name": "starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npm-run-all -s build:html build:css build:js",
    "build:html": "npm-run-all -s build:copy-html build:replace-in-html build:html-minifier",
    "build:copy-html": "copyfiles index.html dist",
    "build:replace-in-html": "replace-in-file .css .min.css dist/index.html",
    "build:html-minifier": "html-minifier dist/index.html -o dist/index.html --collapse-whitespace",
    "build:css": "npm-run-all -s build:sass-to-css build:postcss-autoprefixer build:css-to-mincss",
    "build:sass-to-css": "node-sass src/ -o src/",
    "build:postcss-autoprefixer": "postcss src/*.css --use autoprefixer -d src/",
    "build:css-to-mincss": "cleancss --source-map -o dist/style.min.css src/*.css",
    "build:js": "npm-run-all -s build:ts-to-js build:js-uglify",
    "build:ts-to-js": "tsc src/*ts --outDir src/",
    "build:babel": "babel src -d src",
    "build:js-uglify": "uglifyjs-folder src -eo dist --pattern '**/*.js,!**/*min.js'",
    "dev": "npm-run-all -p dev:*",
    "dev:live-server": "live-server --port=3000",
    "dev:watch-sass-to-css": "node-sass -w src/ -o src/",
    "dev:watch-ts-to-js": "tsc-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/as-one/starter.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/as-one/starter/issues"
  },
  "homepage": "https://github.com/as-one/starter#readme",
  "dependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.11.0",
    "autoprefixer": "^9.8.5",
    "clean-css-cli": "^4.3.0",
    "copyfiles": "^2.3.0",
    "html-minifier": "^4.0.0",
    "live-server": "^1.2.1",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.1",
    "replace-in-file": "^6.1.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^3.9.7",
    "uglifyjs-folder": "^2.0.0"
  }
}
